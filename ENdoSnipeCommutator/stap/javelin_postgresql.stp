    printf("/postgresql/sql/insert,%d\n", insert_count)
    printf("/postgresql/sql/update,%d\n", update_count)
    printf("/postgresql/sql/delete,%d\n", delete_count)
    printf("/postgresql/sql/other,%d\n", other_count)
}

